@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<form method="post">
    <h3>@Model.Message</h3>
    <br />
    <a class="btn btn-success btn-md pull-right" asp-page="./create">Create</a>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model.Customers)
            {
                <tr>
                    <td>@customer.Id</td>
                    <td>@customer.Name</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@customer.Id">Edit</a>
                        <button type="submit" asp-page-handler="delete" asp-route-id="@customer.Id">Delete</button>
                    </td>
                </tr>
            }
            
        </tbody>
    </table>
</form>